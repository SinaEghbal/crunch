<?xml version="1.0" encoding="utf-8"?>
    <GridLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            tools:context="au.edu.anu.cs.crunch.HomeActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="34dp"
            android:stretchMode="spacingWidthUniform"
            android:columnCount="5" android:rowCount="7"
            android:gravity="fill_vertical" android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true" android:id="@+id/gridLayout">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:onClick="buttonOnClick"
            android:id="@+id/btn_point" android:layout_row="5" android:layout_column="1"
            style="?android:attr/borderlessButtonStyle" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:onClick="buttonOnClick"
            android:id="@+id/btn_0" android:layout_row="5" android:layout_column="2"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+/-"
            android:onClick="buttonOperation"
            android:id="@+id/btn_sign" android:layout_row="5" android:layout_column="3"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:onClick="buttonOperation"
            android:id="@+id/btn_result" android:layout_row="5" android:layout_column="4"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:onClick="buttonOnClick"
            android:id="@+id/btn_1" android:layout_row="4" android:layout_column="1"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:onClick="buttonOnClick"
            android:id="@+id/btn_2" android:layout_row="4" android:layout_column="2"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:onClick="buttonOnClick"
            android:id="@+id/btn_3" android:layout_row="4" android:layout_column="3"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:onClick="buttonOnClick"
            android:id="@+id/btn_plus" android:layout_row="4" android:layout_column="4"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:onClick="buttonOnClick"
            android:id="@+id/btn_4" android:layout_row="3" android:layout_column="1"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:onClick="buttonOnClick"
            android:id="@+id/btn_5" android:layout_row="3" android:layout_column="2"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:onClick="buttonOnClick"
            android:id="@+id/btn_6" android:layout_row="3" android:layout_column="3"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:onClick="buttonOnClick"
            android:id="@+id/btn_minus" android:layout_row="3" android:layout_column="4"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:onClick="buttonOnClick"
            android:id="@+id/btn_7" android:layout_row="2" android:layout_column="1"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:onClick="buttonOnClick"
            android:id="@+id/btn_8" android:layout_row="2" android:layout_column="2"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:onClick="buttonOnClick"
            android:id="@+id/btn_9" android:layout_row="2" android:layout_column="3"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:onClick="buttonOnClick"
            android:id="@+id/btn_times" android:layout_row="2" android:layout_column="4"
            style="?android:attr/borderlessButtonStyle"/>
        <TextView
            android:layout_width="214dp"
            android:layout_height="102dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:hint="0.0"
            android:onClick="buttonOnClick"
            android:id="@+id/txtViewScreen" android:layout_row="0" android:layout_column="0"
            android:layout_columnSpan="4"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:onClick="buttonOperation"
            android:id="@+id/btn_clear" android:layout_row="1" android:layout_column="1"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hist"
            android:onClick="buttonOperation"
            android:id="@+id/btn_history" android:layout_row="1" android:layout_column="2"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:onClick="buttonOnClick"
            android:id="@+id/btn_modulus" android:layout_row="1" android:layout_column="3"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:onClick="buttonOnClick"
            android:id="@+id/btn_division" android:layout_row="1" android:layout_column="4"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Del"
            android:onClick="buttonOperation"
            android:id="@+id/btn_delete" android:layout_row="0" android:layout_column="4"
            style="?android:attr/borderlessButtonStyle"/>
        <Spinner
                android:layout_width="81dp"
                android:layout_height="54dp"
                android:id="@+id/spinner_history" android:layout_row="6" android:layout_column="1"
                android:spinnerMode="dialog"/>
    </GridLayout>
